<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Time to Eat!</h1>
        <p class="lead"></p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-10 main">

            <h2>Add a Burger</h2>
            <br>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="burger_name">
                    <label for="devoured">
                        <h3>Devour?</h3>
                    </label>
                    <input type="radio" name="devoured" value="0" checked> Devoured!
                    <input type="radio" name="devoured" value="1"> To be eaten!
                    <button type="submit" class="btn-danger">Add Burger</button>
            </form>
        </div>

    </div>
</div>
<div class="row">
    <div class="col-sm-5 to-consume">
        <h2>Devour Them!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>

    </div>
    <div class="col-sm-5 devoured">

        <h2>Consumed Burgers!</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
</div>
</div>